{
  "name": "@dotdo/npmx",
  "version": "0.0.1",
  "description": "NPM/NPX capabilities for edge runtimes - package management without Node.js",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./semver": "./dist/semver/index.js",
    "./resolver": "./dist/resolver/index.js",
    "./package": "./dist/package/index.js",
    "./tarball": "./dist/tarball/index.js",
    "./errors": "./dist/errors/index.js",
    "./do": "./src/do/index.js"
  },
  "scripts": {
    "dev": "tsup --watch",
    "dev:worker": "wrangler dev",
    "build": "tsup",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "deploy": "wrangler deploy"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "semver": "^7.6.0",
    "tar": "^7.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^3.2.4",
    "wrangler": "^3.0.0"
  },
  "peerDependencies": {
    "@dotdo/fsx": "workspace:*",
    "bashx.do": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@dotdo/fsx": {
      "optional": true
    },
    "bashx.do": {
      "optional": true
    }
  },
  "keywords": ["npm", "npx", "edge", "cloudflare", "workers", "package-manager"],
  "license": "MIT"
}
